{
  "name": "login-system-backend",
  "version": "1.0.0",
  "description": "Sistema de login com backend Node.js e banco de dados SQLite",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-database.js",
    "setup": "npm install && npm run init-db",
    "quick-start": "npm run setup && npm start",
    "dev-start": "npm run setup && npm run dev",
    "iniciar": "node scripts-dev/iniciar.js",
    "iniciar:dev": "node scripts-dev/iniciar.js --dev",
    "iniciar:docker": "node scripts-dev/iniciar.js --docker"
  },
  "keywords": [
    "nodejs",
    "express",
    "sqlite",
    "authentication",
    "login",
    "register"
  ],
  "author": "Projeto de Aprendizado",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "sharp": "^0.34.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
